{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<div class="msf-view">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder' : 'Twój wiek'}}) }}
                {{ form_errors(form.age) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Jaki jest twój ulubiony kolor?</label>
                {{ form_widget(form.colors, {'attr': {'class': 'form-control', 'size' : 6}}) }}
                {{ form_errors(form) }}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3 col-md-offset-6">
        <button type="submit" data-type="next" class="btn btn-default msf-nav-button">Next <i class="fa fa-chevron-right"></i></button>
    </div>
</div>

{{ form_end(form) }}
</div>
{% endblock %}